{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++.exe build active file",
      // "command": "C:\\MinGW\\bin\\g++.exe",
      "command": "/usr/lib/gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "C/C++: gcc.exe build active file",
      //"command": "C:\\MinGW\\bin\\gcc.exe",
      "command": "/usr/lib/gcc",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ],
  "version": "2.0.0"
}
